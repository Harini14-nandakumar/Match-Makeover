<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewAddClothes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Add Clothes"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonTakePhoto"
        android:layout_width="180dp"
        android:layout_height="159dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:background="@color/white"
        android:contentDescription="@string/take_photo_description"
        android:src="@drawable/camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewAddClothes" />

    <TextView
        android:id="@+id/textViewTakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Take a Photo"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/buttonTakePhoto"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/buttonTakePhoto"
        app:layout_constraintTop_toBottomOf="@id/buttonTakePhoto" />

    <ImageButton
        android:id="@+id/buttonAlbums"
        android:layout_width="180dp"
        android:layout_height="159dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:contentDescription="@string/albums_description"
        android:src="@drawable/gallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewAddClothes" />

    <TextView
        android:id="@+id/textViewAlbums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Albums"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/buttonAlbums"
        app:layout_constraintHorizontal_bias="0.641"
        app:layout_constraintStart_toStartOf="@id/buttonAlbums"
        app:layout_constraintTop_toBottomOf="@id/buttonAlbums" />

</androidx.constraintlayout.widget.ConstraintLayout>
